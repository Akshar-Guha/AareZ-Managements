{
  "version": 2,
  "env": {
    "NODE_ENV": "production",
    "CORS_ORIGIN": "https://aarez-mgnmt.vercel.app",
    "MIGRATE_ON_START": "true",
    "JWT_SECRET": "${JWT_SECRET}",
    "DATABASE_URL": "${DATABASE_URL}"
  },
  "build": {
    "env": {
      "VITE_PUBLIC_CORS_ORIGIN": "https://aarez-mgnmt.vercel.app"
    }
  },
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/auth/login", "destination": "api/index.ts" },
    { "source": "/api/(.*)", "destination": "api/index.ts" },
    { "source": "/api/logs", "destination": "api/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
